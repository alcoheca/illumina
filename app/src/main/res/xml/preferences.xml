<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/about"
        android:key="about">

        <Preference
            android:title="@string/rate_illumina"
            android:summary="@string/rate_illumina_summary">
            <intent
                android:targetPackage="de.medienDresden.illumina"
                android:targetClass="de.medienDresden.illumina.IlluminaPreferenceActivity"
                android:action="de.medienDresden.illumina.ACTION_RATE" />
        </Preference>

        <Preference
            android:title="@string/licenses"
            android:summary="@string/licenses_summary">
            <intent
                android:targetPackage="de.medienDresden.illumina"
                android:targetClass="de.medienDresden.illumina.IlluminaPreferenceActivity"
                android:action="de.medienDresden.illumina.ACTION_LICENSES" />
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/acra"
        android:key="about">

        <CheckBoxPreference
            android:key="acra.enable"
            android:title="@string/pref_enable_acra"
            android:summary="@string/pref_acra_summary"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="acra.syslog.enable"
            android:title="@string/pref_acra_syslog"
            android:summary="@string/pref_acra_syslog_summary"
            android:defaultValue="false"/>

        <CheckBoxPreference android:key="acra.alwaysaccept"
            android:title="@string/pref_acra_alwaysaccept"
            android:summary="@string/pref_acra_alwaysaccept_summary"
            android:defaultValue="false"/>

        <EditTextPreference
            android:key="acra.user.email"
            android:title="@string/pref_acra_user_email"
            android:summary="@string/pref_acra_user_email_summary"/>

    </PreferenceCategory>

</PreferenceScreen>