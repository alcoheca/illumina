<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.medienDresden.illumina" >

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="de.medienDresden.illumina.SERVICE"
        android:label="@string/permission_label_service"
        android:description="@string/permission_description_service"
        android:icon="@drawable/ic_launcher" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Illumina" >

        <activity
            android:name=".DeviceListActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <service
            android:name=".PilightService"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:process=":pilight" />

        <receiver android:name=".receiver.BootCompletedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.ServiceAvailabilityReceiver"
            android:permission="de.medienDresden.illumina.SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="de.medienDresden.illumina.ACTION_SERVICE_MAKE_AVAILABLE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
